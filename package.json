{
  "name": "pulse",
  "version": "1.0.0",
  "description": "a chat application",
  "main": "index.js",
  "module": "commonjs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yaredybk/pulse.git"
  },
  "keywords": [
    "chat",
    "message",
    "messanger",
    "nodejs",
    "server",
    "pulse"
  ],
  "author": "yared b.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yaredybk/pulse/issues"
  },
  "homepage": "https://github.com/yaredybk/pulse#readme",
  "dependencies": {
    "connect-redis": "^7.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-openid-connect": "^2.17.1",
    "express-session": "^1.18.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.0",
    "redis": "^4.7.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": false,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2023,
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-var": "error",
      "prefer-const": "error",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "error",
            "warn"
          ]
        }
      ],
      "no-unused-expressions": "error",
      "no-empty": "error",
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1
        }
      ],
      "no-trailing-spaces": "error",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "array-bracket-spacing": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-infix-ops": "error",
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-shadow": "error",
      "no-undef": "error",
      "no-undef-init": "error",
      "no-restricted-imports": [
        "error",
        "lodash"
      ],
      "max-lines": [
        "error",
        {
          "max": 200
        }
      ],
      "max-depth": [
        "error",
        {
          "max": 5
        }
      ],
      "max-nested-callbacks": [
        "error",
        {
          "max": 4
        }
      ],
      "complexity": [
        "error",
        {
          "max": 10
        }
      ]
    }
  }
}
